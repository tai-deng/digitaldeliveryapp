<script type='textecmascript-6'>
import {
  getPurchaseList,
  getBuildList,
  getSpecialtyList,
  getFloorList,
  getChangeList,
  clearSel
} from "../../../assets/js/scopeManage.js";

export default {
  data() {
    return {
      options: {
        BuildName: "",
        Specialty: "",
        Floor: "",
        Name: "",
        page: 1,
        rows: 5
      },
      rangeList: [],
      isLoading: false,
      ispull: true,
      BuildNameList: [], // 楼栋下拉
      SpecialtyList: [], // 专业下拉
      FloorbyList: [], // 楼层下拉
      sel_show: false,
      active: 0,
      activeNames: ["0"],

      ingCurrentPage: 1,
      handleCurrentPage: 1,
      overCurrentPage: 1,
      //变更数据
      dataIng: [],
      dataHandle: [],
      dataOver: []
    };
  },
  created() {
    getPurchaseList(this);
    getBuildList(this);
  },
  methods: {
    // tab
    onActive() {
      this.options = {
        BuildName: "",
        Specialty: "",
        Floor: "",
        Name: "",
        page: 1,
        rows: 5
      };
      this.SpecialtyList = []; // 专业下拉
      this.FloorbyList = [];
      if (this.active == 1) {
        this.dataIng = [];
        this.dataHandle = [];
        this.dataOver = [];

        getChangeList(this, 0);
        getChangeList(this, 1);
        getChangeList(this, 2);
      } else {
        this.rangeList = [];
        getPurchaseList(this);
      }
    },
    // 楼层选项
    onSelFloor(e) {
      this.options.Floor = e.text;
    },
    // 专业选项
    onSelSpec(e) {
      this.options.Specialty = e.text;
    },
    // 楼栋选项
    onSelBuild(e) {
      this.options.BuildName = e.text;
    },
    // 下拉加载
    onRefresh() {
      if (this.ispull) {
        this.options.page = this.options.page += 1;
        getPurchaseList(this);
      } else {
        let timer = setTimeout(() => {
          this.isLoading = false;
          clearTimeout(timer);
          this.$message({
            type: "warning",
            message: "已没有更多数据",
            center: "true"
          });
        }, 200);
      }
    },
    // 返回按钮
    onClickLeft() {
      this.$router.go(-1);
    },
    // 筛选按钮
    onClickRight() {
      this.sel_show = !this.sel_show;
    },
    // 重置函数
    resetFunc() {
      this.options = {
        BuildName: "",
        Specialty: "",
        Floor: "",
        Name: "",
        page: 1,
        rows: 5
      };
    },
    // 确认选择
    recordCheck() {
      this.options.page = 1;
      if (this.active == 1) {
        this.dataIng = [];
        this.dataHandle = [];
        this.dataOver = [];
        getChangeList(this, 0);
        getChangeList(this, 1);
        getChangeList(this, 2);
      } else {
        this.rangeList = [];
        getPurchaseList(this);
      }
    },
    //搜索函数
    searchFunc() {
      this.rangeList = [];
      this.options.page = 1;
      getPurchaseList(this);
    },
    // 变更数据处理
    pushData(data, func) {
      data.Detiel.forEach(element => {
        let item = {
          Code: element.Code,
          Building: element.Building ? element.Building : "/",
          Specialty: element.Specialty ? element.Specialty : "/",
          Floor: element.Floor ? element.Floor : "/",
          Theme: element.Theme ? element.Theme : "/",
          EndTime: element.EndTime
            ? require("moment")(element.EndTime).format("YYYY/MM/DD")
            : "/",
          DoNum: element.DoNum + "/" + element.TotalDoNum,
          ID: element.ID
        };
        func(item);
      });
    },

    // 采购详情
    onPurchase(id) {
      this.$router.push({ path: "/purchaseDetails", query: { id } });
    }
  },
  watch: {
    "options.BuildName"(val) {
      if (val != "") {
        clearSel(this, 1);
        getSpecialtyList(this);
      }
    },
    "options.Specialty"(val) {
      if (val != "") {
        clearSel(this, 2);
        getFloorList(this);
      }
    }
  }
};
</script>
